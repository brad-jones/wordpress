{
	"name":"brads/wordpress",
	"type":"project",
	"description": "A composer project package that will install the latest wordpress and get you started quickly.",
	"homepage": "https://github.com/brad-jones/wordpress",
	"keywords": ["wordpress"],
	"license": "MIT",
	"repositories":
	[{
		"type": "composer",
		"url": "http://wpackagist.org"
	}],
	"require":
	{
		"codegyre/robo": "*",
		"wp-cli/wp-cli": "*",
		"guzzlehttp/guzzle": "4.*",
		"gears/assetmini": "*",
		"wpackagist-plugin/advanced-custom-fields": "*"
	},
	"scripts":
	{
		"post-install-cmd": "robo wp:install",
		"post-update-cmd": "robo wp:update",
		"post-create-project-cmd": "robo wp:salts"
	},
	"extra":
	{
		"assetmini-dir": "./wp-content/themes/default/assets"
	}
}